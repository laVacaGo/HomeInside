<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:weightSum="1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/bombilla"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scroll_ilum"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="#00516C"
        android:textStyle="bold"/>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_habitacion1"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="#00516C"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/habitacion_salon"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/lampara1"
                android:textColor="#00516C"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lampara central" />
            <ImageView
                android:id="@+id/salon_principal"
                android:onClick="onClickBombilla"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/bombilla_encendida_redonda"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/lampara2"
                android:textColor="#00516C"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lampara Secundaria" />
            <ImageView
                android:onClick="onClickBombilla"
                android:id="@+id/salon_secundaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:layout_weight="1"
                android:src="@mipmap/bombilla_apagada_redonda"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_habitacion2"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textColor="#00516C"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/habitacion_cocina"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/lampara3"
                    android:textColor="#00516C"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lampara central" />
                <ImageView
                    android:id="@+id/cocina"
                    android:onClick="onClickBombilla"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bombilla_encendida_redonda"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_habitacion3"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textColor="#00516C"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/habitacion_principal"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/lampara4"
                    android:textColor="#00516C"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lampara central" />
                <ImageView
                    android:id="@+id/habit_prin_central"
                    android:onClick="onClickBombilla"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bombilla_encendida_redonda"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/lampara5"
                    android:textColor="#00516C"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lampara Secundaria" />
                <ImageView
                    android:onClick="onClickBombilla"
                    android:id="@+id/habit_prin_secundaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_weight="1"
                    android:src="@mipmap/bombilla_apagada_redonda"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        android:layout_weight="0.95">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_habitacion4"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textColor="#00516C"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/habitacion_bano"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/lampara6"
                    android:textColor="#00516C"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lampara central" />
                <ImageView
                    android:id="@+id/bano"
                    android:onClick="onClickBombilla"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bombilla_encendida_redonda"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_habitacion5"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textColor="#00516C"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/habitacion_invitados"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/lampara7"
                    android:textColor="#00516C"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lampara central" />
                <ImageView
                    android:id="@+id/habit_sec_central"
                    android:onClick="onClickBombilla"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="30dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bombilla_encendida_redonda"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/lampara8"
                    android:textColor="#00516C"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lampara Secundaria" />
                <ImageView
                    android:onClick="onClickBombilla"
                    android:id="@+id/habit_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_weight="1"
                    android:src="@mipmap/bombilla_apagada_redonda"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>