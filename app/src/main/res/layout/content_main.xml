<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rodrigo.sdm.com.homeinside.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TableRow>
        <LinearLayout
            android:background="@drawable/casaplano2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_span="3"
            android:layout_marginBottom="15dp">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="59dp"
                android:layout_height="55dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/casa_icon"
                android:layout_gravity="bottom"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="MAIN SPACE"
                android:textColor="#00516C"
                android:textStyle="bold"
                android:textSize="@dimen/activity_horizontal_margin"
                android:textAlignment="gravity"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:layout_gravity="bottom" />
        </LinearLayout>
    </TableRow>
    <TableRow>
        <ImageButton
            android:id="@+id/button_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert" />
        <ImageButton
            android:onClick="buttonOnClicked"
            android:id="@+id/button_iluminacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert"
            />
        <ImageButton
            android:id="@+id/button_temperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_general"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_ilum"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="@string/scroll_temp"
            android:textAlignment="center"
            />

    </TableRow>
    <TableRow>
        <ImageButton
            android:id="@+id/button_persianas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert"
            />
        <ImageButton
            android:id="@+id/button_jardin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert"
            />
        <ImageButton
            android:id="@+id/button_meteo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_pers"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_jardin"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scroll_meteo"
            android:lines="2"
            android:textAlignment="center"
            />
    </TableRow>
    <TableRow>
        <ImageButton
            android:id="@+id/button_eventos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert"
            />
        <ImageButton
            android:id="@+id/button_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert"
            />
        <ImageButton
            android:id="@+id/button_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert"
            />
    </TableRow>
    <TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scroll_eventos"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scroll_tools"
        android:lines="2"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scroll_about"
        android:textAlignment="center"
        />
    </TableRow>

</TableLayout>
